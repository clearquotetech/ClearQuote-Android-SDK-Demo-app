<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fadeScrollbars="false"
    android:scrollbars="vertical"
    android:scrollbarSize="@dimen/cq_sdk_scroll_bar_size"
    android:scrollbarTrackVertical="@color/cq_sdk_scroll_bar_track_color"
    android:scrollbarThumbVertical="@color/cq_sdk_scroll_bar_thumb_color">

    <!--Main content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity">

        <!--App name-->
        <TextView
            android:id="@+id/tvAppName"
            style="@style/cq_sdk_h5_headline"
            android:text="@string/app_name"
            android:layout_marginTop="20dp"
            android:gravity="center" />

        <!--Divider-->
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/md3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <!--Client attrs heading-->
        <TextView
            android:id="@+id/tvClientAttrsHeading"
            style="@style/cq_sdk_h6_headline"
            android:text="Client attributes"
            android:layout_marginTop="10dp"/>

        <!--User name-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlUserName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Enter Username">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Dealer-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlDealer"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:hint="Enter Dealer">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDealer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Dealer identifier-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlDealerIdentifier"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:hint="Enter Dealer Identifier">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDealerIdentifier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Client unique id-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlClientUniqueId"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:hint="Enter Client Unique Id">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etClientUniqueId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Divider-->
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/md1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <!--Input details heading-->
        <TextView
            android:id="@+id/tvInputDetailsHeading"
            style="@style/cq_sdk_h6_headline"
            android:layout_marginTop="10dp"
            android:text="Input details" />

        <!--Registration number-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlRegNumber"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Enter Registration Number">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRegNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Make-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlMake"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:hint="Enter Make">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Model-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlModel"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Enter Model">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Body style-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlBodyStyle"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Enter Bodystyle">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBodyStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Variant-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlVariant"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Enter Variant">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etVariant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Fuel type-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlFuelType"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Enter Fuel Type">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFuelType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Inspection type-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlInspectionType"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Enter Inspection Type">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etInspectionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Fleet image type-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlFleetImageType"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Enter Fleet Image Type">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFleetImageType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Customer name-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlCustomerName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Enter Customer Name">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Customer email-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlCustomerEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Enter Customer Email">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCustomerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Dial code and phone number container-->
        <LinearLayout
            android:id="@+id/llDialCodeAndPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <!--Dial code-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlCustomerDialCode"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"
                android:hint="Dial code">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCustomerDialCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!--Customer phone number-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlCustomerPhoneNumber"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Phone">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCustomerPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!--Online offline switch button selector-->
        <LinearLayout
            android:id="@+id/llOfflineModeSwitchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="10dp">
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/swOfflineMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offline Mode " />
        </LinearLayout>

        <!--Divider-->
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/md2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <!--Start inspection with strict offline mode existing key-->
        <Button
            android:id="@+id/btnStartInspection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:text="Start Inspection" />

        <!--Start inspection with offline mode selection-->
        <Button
            android:id="@+id/btnStartInspectionOfflineModeSelectionIsUpToTheUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:text="Start Inspection : Offline mode selection is upto the user" />



        <!--Start inspection with existing key and skip input page-->
        <Button
            android:id="@+id/btnStartInspectionWithSkipInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:text="Start Inspection : Skip input" />

        <!--Change key-->
        <Button
            android:id="@+id/btnConfigureKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="Configure key" />

        <!--Open CQ native android app-->
        <Button
            android:id="@+id/btnOpenCqNativeApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/primary_color"
            android:text="Open CQ native app" />

        <!--Check quote completion status-->
        <Button
            android:id="@+id/btnOfflineQuoteSyncCompleteStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/primary_color"
            android:text="Check offline quote sync complete status" />

        <!--Start auto capture flow-->
        <Button
            android:id="@+id/btnStartAutoCaptureFlow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/primary_color"
            android:text="Start Auto capture flow" />

        <!--Current key-->
        <TextView
            android:id="@+id/tvSdkKeyHeading"
            style="@style/cq_sdk_c1_caption"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="SDK Key:" />

        <!--Current key-->
        <TextView
            android:id="@+id/tvDealerCode"
            style="@style/cq_sdk_c1_caption"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Dealer Code:" />

        <!--Current key-->
        <TextView
            android:id="@+id/tvUserName"
            style="@style/cq_sdk_c1_caption"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Username:" />

        <!--CQ SDK version name-->
        <TextView
            android:id="@+id/tvCQSDKVersionName"
            style="@style/cq_sdk_c1_caption"
            android:text=""
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <!--App version name-->
        <TextView
            android:id="@+id/tvTestAppVersionName"
            style="@style/cq_sdk_c1_caption"
            android:text=""
            android:gravity="center"
            android:layout_marginTop="20dp" />

        <!--Log out-->
        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/materialButtonOutlinedStyle"
            android:textColor="@color/cq_sdk_red_200"
            app:strokeColor="@color/cq_sdk_red_200"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:text="Logout"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</ScrollView>